#!/bin/bash
# =============================================================================
# git push 禁止フック
# =============================================================================
# リモートへのpushを防ぐためのpre-pushフック
# 殿の許可なくリモートリポジトリへpushすることを禁止する
# =============================================================================

echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "⚠️  git push は禁止されております"
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo ""
echo "殿の許可なくリモートにプッシュすることは許されませぬ。"
echo ""
echo "どうしてもpushが必要な場合は、以下のいずれかをお使いください："
echo ""
echo "  1. フックを一時的に無効化してpush:"
echo "     git push --no-verify"
echo ""
echo "  2. このフックを削除:"
echo "     rm .git/hooks/pre-push"
echo ""
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"

exit 1
